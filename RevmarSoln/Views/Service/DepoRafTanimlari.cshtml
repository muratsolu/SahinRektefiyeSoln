@model SahinRektefiyeSoln.Models.ViewModels.Services.DepoRafTanimPageModel
@{
	ViewBag.Title = "DepoRafTanimlari";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Vereyon.Web;
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Depo Raf Tanımıları", pagePermission = "XXXXX" })
<script>
	$(document).ready(function () {
		$('#filter_DepoSirasi').keyup(function () {
			this.value = $.trim(this.value.toUpperCase());
		});

		$('#filter_DepoRafi').keyup(function () {
			this.value = $.trim(this.value.toUpperCase());
		});

		$('#filter_DepoHucresi').keyup(function () {
			this.value = $.trim(this.value.toUpperCase());
		});


	});
</script>

<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-row w3-row-padding">
			@Html.RenderFlashMessages()
		</div>
		<div class="w3-row w3-row-padding w3-margin-top">
			<a href="/Service/DepoRafTanim" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp; Depo Raf Tanımı Ekle</a>
		</div>
		@using (Html.BeginForm())
		{
			<div class="w3-row">
				<div class="w3-half">
						<div class="w3-third w3-padding">
							<label>Depo Sırası</label>
							@Html.EditorFor(model => model.filter.DepoSirasi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round ", maxlength = "5", autocomplete = "off" } })
						</div>
						<div class="w3-third w3-padding">
							<label>Depo Rafı</label>
							@Html.EditorFor(model => model.filter.DepoRafi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round ", maxlength = "5", autocomplete = "off" } })
						</div>
						<div class="w3-third w3-padding">
							<label>Depo Hücresi</label>
							@Html.EditorFor(model => model.filter.DepoHucresi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round ", maxlength = "5", autocomplete = "off" } })
						</div>
					
				</div>
				<div class="w3-half">
					<div class="w3-half w3-padding">
						<label>Açıklama</label>
						@Html.EditorFor(model => model.filter.Aciklama, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "126", autocomplete = "off" } })
					</div>
					<div class="w3-half w3-padding">
						<br>
						<button class="w3-btn w3-ripple w3-blue w3-left">Ara</button>
					</div>
				</div>
			</div>

		}
		<div class="w3-threequarter">
			<table class="w3-table-all w3-margin-top w3-margin-bottom">
				<thead>
					<tr>
						<th>Depo Sırası</th>
						<th>Depo Rafı</th>
						<th>Depo Hücresi</th>
						<th>Açıklaması</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.depoRaflari)
					{
						<tr>
							<td>@item.DepoSirasi</td>
							<td>@item.DepoRafi</td>
							<td>@item.DepoHucresi</td>
							<td>@item.Aciklama</td>
							<td>
								<a href="/Service/EditDepoRafTanim?DepoRafTanimId=@item.DepoRafTanimId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-cop"></i>&nbsp;Düzenle </a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>

	</div>
</div>