@model SahinRektefiyeSoln.Models.ViewModels.Services.TedarikciPageModel
@using SahinRektefiyeSoln.Helpers;
@{
    ViewBag.Title = "Tedarikciler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Tedarikciler", pagePermission = "XXXXX" })

<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        <div class="w3-row w3-row-padding w3-margin-top">
            <a href="/Service/TedarikciTanim" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp; Tedarikci Tanımı Ekle</a>
        </div>
        @using (Html.BeginForm())
        {
            <div class="w3-row">
                <div class="w3-quarter w3-padding">
                    <label>Tedarikçi Kodu</label>
                    @Html.EditorFor(model => model.Filter.Kodu, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", autocomplete = "off", maxlength = "16" } })
                </div>
                <div class="w3-quarter w3-padding">
                    <label>Tedarikçi Adı</label>
                    @Html.EditorFor(model => model.Filter.Adi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", autocomplete = "off", maxlength = "128" } })
                </div>
                <div class="w3-quarter w3-padding">
                    <label>Vergi Numarası</label>
                    @Html.EditorFor(model => model.Filter.VergiNumarasi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", autocomplete = "off", maxlength = "10" } })
                </div>
                <div class="w3-quarter w3-padding">
                    <br>
                    <button class="w3-btn w3-ripple w3-blue w3-left">Ara</button>
                </div>
            </div>
        }
        <div class="w3-row">
            <table class="w3-table-all w3-margin-top w3-margin-bottom w3-responsive w3-small">
                <thead>
                    <tr>
                        <th>Kodu</th>
                        <th >Adı</th>
                        <th>Vergi Dairesi</th>
                        <th>Vergi Numarası</th>
                        <th>Firma Telefon No</th>
                        <th>Firma E-Mail</th>
                        @*<th>Vade</th>*@
                        <th>Kişi</th>
                        <th>Kişi EMail</th>
                        <th>Kişi Tel No</th>
                        <th>Adres</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Tedarikciler)
                    {
                        <tr>
                            <td>@item.Kodu</td>
                            <td>@item.Adi.Limit(36)</td>
                            <td>@item.VergiDairesi.Limit(20)</td>
                            <td>@item.VergiNumarasi.Limit(20)</td>
                            <td>@item.FirmaTelNo</td>
                            <td>@item.FirmaEmail.Limit(30)</td>
                            @*<td>@item.Vade</td>*@
                            <td>@item.KontakAdiSoyadi.Limit(24)</td>
                            <td>@item.KontakEmail.Limit(24)</td>
                            <td>@item.KontakTelNo</td>
                            <td>@item.Adres.Limit(50)</td>
                            <td>
                                <a href="/Service/TedarikciDuzenle?TedarikciId=@item.TedarikciId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-cop"></i>&nbsp;Düzenle </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

