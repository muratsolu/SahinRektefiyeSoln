@model SahinRektefiyeSoln.Models.MailGruplari
@{
	ViewBag.Title = "MailGrupTanimla";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Mail Grup Tanımla", pagePermission = "XXXXX" })


<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("MailGrupTanimla", "Mail", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()
			<div class="w3-row">
				<div class="w3-quarter w3-padding">
					<label>Mail Grup Adı</label>
					@Html.EditorFor(model => model.MailGrupAdi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "128", autocomplete = "off" } })
				</div>
				<div class="w3-quarter w3-padding">
					<label>Mail Excel'i</label><br />
					<input type="file" id="fileInputhdn" name="files" class="file-upload-input" />
				</div>

			</div>

			<div class="w3-row w3-margin-bottom">
				<div class="w3-quarter w3-padding">
					<a href="/Mail/MailGruplari" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Mail Grupları </a>
				</div>
				<div class="w3-quarter  w3-padding"><button class="w3-btn w3-ripple w3-green w3-right">Kaydet</button></div>
				<div class="w3-quarter">&nbsp;</div>

				<div class="w3-quarter  w3-padding">

				</div>
			</div>
		}
	</div>
</div>
