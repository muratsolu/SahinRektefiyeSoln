@model IEnumerable<SahinRektefiyeSoln.Models.MailAdresleri>
@{
	ViewBag.Title = "MailGrupAdresleriGor";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
	function myFunction() {
		var input, filter, table, tr, td, i, txtValue;
		input = document.getElementById("MailAdresi");
		filter = input.value.toUpperCase();
		table = document.getElementById("myTable");
		tr = table.getElementsByTagName("tr");
		for (i = 0; i < tr.length; i++) {
			td = tr[i].getElementsByTagName("td")[0];
			if (td) {
				txtValue = td.textContent || td.innerText;
				if (txtValue.toUpperCase().indexOf(filter) > -1) {
					tr[i].style.display = "";
				} else {
					tr[i].style.display = "none";
				}
			}
		}
	}
</script>


@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Mail Grupları İçerik", pagePermission = "XXXXX" })


<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-row w3-row-padding w3-margin-top">
			<a href="/Mail/MailGruplari" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp; Mail Gruplarına Dön</a>
		</div>
		<div class="w3-row w3-padding">
			<h5><b>@Model.First().MailGruplari.MailGrupAdi </b> grubunu görüntülemektesiniz. Mail grubunda <b> @Model.Count() </b> adet mail adresi bulunmaktadır.</h5>
		</div>
		<div class="w3-row">
			<div class="w3-third">
				<div class="w3-row w3-padding">
					<label>Mail Adresi</label>
					<input type="text" id="MailAdresi" class="w3-input w3-border  text-box single-line" onkeyup="myFunction()" placeholder="Mail Adresi" />
				</div>
			</div>
		</div>


		<div class="w3-half">
			<table class="w3-table-all w3-margin-top w3-margin-bottom" id="myTable">
				<thead>
					<tr>
						<th>Mail Adresi</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Mail</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>