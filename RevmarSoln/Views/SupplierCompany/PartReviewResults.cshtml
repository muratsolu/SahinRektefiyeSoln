@model IEnumerable<SahinRektefiyeSoln.Models.PartReviewResult>
@{
	ViewBag.Title = "Parça Sonuç Tipi Tanımları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Parça Sonuç Tanımları", pagePermission = "SUPMN_01" })

<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-row w3-row-padding w3-margin-top">
			<div class="w3-tooltip">
				<a href="/SupplierCompany/CreatePartReviewResult" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp;Parça Sonuç Ekle </a>
				<p class="w3-text">Buradaki değişiklikler uygulama içerisinde ek kod değişikliği gerektirmektedir.Lütfen uygulama geliştiriciniz ile iletişime geçiniz.</p>
			</div>
			</div>
			<table class="w3-table-all w3-hoverable w3-margin-top w3-margin-bottom">
				<thead>
					<tr class="w3-light-grey">
						<th>Parça Sonuç Id</th>
						<th>Parça Sonuç Açıklaması</th>
						<th>Eklendiği Tarih</th>
						<th>Ekleyen Kullanıcı</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.PartReviewResultId
				</td>
				<td>
					@item.PartReviewResultDesc
				</td>

				<td>
					@Convert.ToDateTime(item.CreatedDate).ToShortDateString()
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Creator)
				</td>
				<td>
					<a href="/SupplierCompany/EditPartReviewResult?PartReviewResultId=@item.PartReviewResultId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-car"></i>&nbsp;Düzenle </a>
				</td>
				<td>
					<a href="/SupplierCompany/DeletePartReviewResult?PartReviewResultId=@item.PartReviewResultId" class="w3-btn w3-ripple w3-red" onclick="if (!confirm('Silmek istediğinizden emin misiniz?')) return false;"><i class="fa fa-trash"></i>&nbsp; Sil </a>
				</td>
			</tr>
}
			</table>
		</div>
</div>
