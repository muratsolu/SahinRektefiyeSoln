@model SahinRektefiyeSoln.Models.PartReviewType

@{
	ViewBag.Title = "Parça Tipi Düzenleme Sayfası";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Parça Tipi Tanım Sayfası", pagePermission = "SUPMN_01" })


<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="w3-row">
				<div class="w3-third w3-padding">
					<label>Parça Tipi Tanımı Açıklaması</label>
					@Html.EditorFor(model => model.PartTypeDesc, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "50", autocomplete = "off" } })
				</div>
			</div>
			<hr>
			<div class="w3-row">
				<div class="w3-quarter w3-left">
					<a href="/SupplierCompany/PartReviewTypes" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">&nbsp;</div>
				<div class="w3-quarter w3-padding">

				</div>
				<div class="w3-quarter  w3-padding">
					<button class="w3-btn w3-ripple w3-green w3-right">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>


