@model IEnumerable<SahinRektefiyeSoln.Models.RevisionType>
@{
	ViewBag.Title = "Revizyon Tipi Tanımları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Revizyon Tipi Tanımları", pagePermission = "SUPMN_01" })

<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-row w3-row-padding w3-margin-top">
			<a href="/SupplierCompany/CreateRevisionType" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp;Revisyon Tipi Ekle </a>
		</div>
		<table class="w3-table-all w3-hoverable w3-margin-top w3-margin-bottom">
			<thead>
				<tr class="w3-light-grey">
					<th>Revizyon Tipi Id</th>
					<th>Revizyon Tipi Açıklaması</th>
					<th>Eklendiği Tarih</th>
					<th>Ekleyen Kullanıcı</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.RevisionTypeId
					</td>
					<td>
						@item.RevisionDesc
					</td>

					<td>
						@Convert.ToDateTime(item.CreatedDate).ToShortDateString()
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Creator)
					</td>
					<td>
						<a href="/SupplierCompany/EditRevisionType?RevisionTypeId=@item.RevisionTypeId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-car"></i>&nbsp;Düzenle </a>
					</td>
					<td>
						<a href="/SupplierCompany/DeleteRevisionType?RevisionTypeId=@item.RevisionTypeId" class="w3-btn w3-ripple w3-red" onclick="if (!confirm('Silmek istediğinizden emin misiniz?')) return false;"><i class="fa fa-trash"></i>&nbsp; Sil </a>
					</td>
				</tr>
			}
		</table>
	</div>
</div>
