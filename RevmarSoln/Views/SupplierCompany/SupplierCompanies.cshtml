@model IEnumerable<SahinRektefiyeSoln.Models.SupplierCompany>
@{
	ViewBag.Title = "Tedarikçi Firma Noktaları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Tedarikçi Firma Noktaları", pagePermission = "SUPMN_01" })

<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-row w3-row-padding w3-margin-top">
			<a href="/SupplierCompany/CreateSupplierCompany" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp;Tedarikçi Firma Noktası Ekle</a>
		</div>
		<table class="w3-table-all w3-hoverable w3-margin-top w3-margin-bottom">
			<thead>
				<tr class="w3-light-grey">
					<th>Tedarikçi Firma Noktası</th>
					<th>Firma </th>
					<th>Eklendiği Tarih</th>
					<th>Ekleyen Kullanıcı</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.CompanyDesc
					</td>
					<td>
						@item.Companies.Name
					</td>

					<td>
						@Convert.ToDateTime(item.CreatedDate).ToShortDateString()
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Creator)
					</td>
					<td>
						<a href="/SupplierCompany/EditSupplierCompany?SupplierCompanyId=@item.SupplierCompanyId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-car"></i>&nbsp;Düzenle </a>
					</td>
					<td>
						<a href="/SupplierCompany/DeleteSupplierCompany?SupplierCompanyId=@item.SupplierCompanyId" class="w3-btn w3-ripple w3-red" onclick="if (!confirm('Silmek istediğinizden emin misiniz?')) return false;"><i class="fa fa-trash"></i>&nbsp; Sil </a>
					</td>
				</tr>
			}
		</table>
	</div>
</div>
