@model SahinRektefiyeSoln.Models.SupplierCompany

@{
	ViewBag.Title = "Tedarikçi Firma Noktası Tanımla";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Tedarikçi Firma Noktası Tanımla", pagePermission = "SUPMN_01" })


<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="w3-row">
			<div class="w3-third w3-padding">
				<label>Tedarikçi Firma Noktası </label>
				@Html.EditorFor(model => model.CompanyDesc, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "50", autocomplete = "off" } })
			</div>
			<div class="w3-third w3-padding">
				<label>Firma</label>
				@Html.DropDownList("CompanyId", (SelectList)ViewBag.Companies, htmlAttributes: new { @class = "w3-select w3-border w3-round", @Id = "CompanyId" })
			</div>
		</div>
	
		<hr>
		<div class="w3-row">
			<div class="w3-quarter w3-left">
				<a href="/SupplierCompany/SupplierCompanies" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
			</div>
			<div class="w3-quarter">&nbsp;</div>
			<div class="w3-quarter w3-padding">

			</div>
			<div class="w3-quarter  w3-padding">
				<button class="w3-btn w3-ripple w3-green w3-right">Kaydet</button>
			</div>
		</div>
}
	</div>
</div>


