@model SahinRektefiyeSoln.Models.ViewModels.Teklif.TeklifIsEmriDonusturPageModel
@{
	Layout = null;
}

<script src="~/Scripts/DatetimePicker/jquery.datetimepicker.full.min.js"></script>

<link href="~/Scripts/DatetimePicker/jquery.datetimepicker.css" rel="stylesheet" />


<script>

	//$(document).ready(function () {
		
        jQuery(document).ready(function () {
            'use strict';

            jQuery('#TahminiTeslimTarihi').datetimepicker(
                {
                    value: '@(Model.TahminiTeslimTarihi !=null ? Model.TahminiTeslimTarihi.Value.Year +"/"+ Model.TahminiTeslimTarihi.Value.Month+"/"+ Model.TahminiTeslimTarihi.Value.Day +" "+ Model.TahminiTeslimTarihi.Value.Hour+":"+Model.TahminiTeslimTarihi.Value.Minute+"\'" : null)'
                });
        });

        //$.datetimepicker.setLocale('tr');

    //});
</script>

<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("TeklifiIsEmrineDonustur", "Teklif", FormMethod.Post))
		{
			<div class="w3-row">
				<div class="w3-third w3-padding">
					@Html.HiddenFor(x => x.TeklifId)
					<div class="w3-row">
						<label>Km</label>
						@Html.EditorFor(model => model.KM, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "17", autocomplete = "off" } })
					</div>
					<div class="w3-row">
						<label>Danışman</label>
						@Html.DropDownList("DanismanId", (SelectList)ViewBag.Danismanlar, "Danışman Seçiniz", htmlAttributes: new { @class = "w3-select w3-border w3-round", @Id = "DanismanId", required = "required" })
					</div>

					<div class="w3-row">
						<label>Tahmini Teslim Tarihi</label>
						@Html.EditorFor(model => model.TahminiTeslimTarihi, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", id = "TahminiTeslimTarihi", autocomplete = "off" } })
					</div>
				</div>
			</div>
			<div class="w3-row">
				<div class="w3-quarter w3-padding w3-right">
					<button class="w3-btn w3-ripple w3-green w3-right" type="submit" id="btnOlustur">İş Emrine Dönüştür</button>
				</div>
			</div>
		}
	</div>
</div>



