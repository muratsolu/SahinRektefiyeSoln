@model SahinRektefiyeSoln.Models.KlimaFixing
@{
	ViewBag.Title = "KlimaFixing";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
	$(document).ready(function () {
		$("#WorkOrderStatu").val('@ViewBag.WorkOrderStatu');
		if ($("#WorkOrderStatu").val() == "20") {
			$("#btnSave").addClass("w3-hide");
			$(".w3-check").attr("disabled", true);
			$("#TespitAciklama").attr("disabled", true);
		}
	});
</script>
<input type="text" class="w3-hide" id="WorkOrderStatu" />
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Klima Tespit Sonuçları", pagePermission = "EMP_02" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("KlimaFixingAdd", "IsEmri", FormMethod.Post))
		{
			@Html.HiddenFor(model => model.KlimaFixId)
			@Html.HiddenFor(model => model.IsEmriId)
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKasnakKisimHasar, new { @class = "w3-check" })
					<label>Kasnak kısmında hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKompleKlimaKompHasar, new { @class = "w3-check" })
					<label>Komple klima kompresöründe hasar</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPleytKisimHasar, new { @class = "w3-check" })
					<label>Pleyt kısmanda hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBobinHasar, new { @class = "w3-check" })
					<label>Bobinde arıza</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRulmanHasar, new { @class = "w3-check" })
					<label>Rulmanda hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBasincValfAriza, new { @class = "w3-check" })
					<label>Basınç valfinde arıza</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwGovdeHasar, new { @class = "w3-check" })
					<label>Gövde de hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKapakHasar, new { @class = "w3-check" })
					<label>Kapakta hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class=" w3-padding">
					<label>Tespitler</label>
					@Html.TextAreaFor(model => model.TespitAciklama, new { @class = "w3-input w3-border w3-round", rows = "6", cols = "300" })

				</div>
			</div>
			<div class="w3-row w3-margin">
				<div class="w3-quarter">
					<a href="/IsEmri/IsEmriDuzenle?IsEmriId=@Model.IsEmriId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">
					<button class="w3-btn w3-ripple w3-green" id="btnSave">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>


