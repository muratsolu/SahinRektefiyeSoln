@model SahinRektefiyeSoln.Models.DireksiyonPompaFixing

@{
	ViewBag.Title = "Direksiyon Pompa Tespit Sonuçları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
	$(document).ready(function () {
		$("#WorkOrderStatu").val('@ViewBag.WorkOrderStatu');
		if ($("#WorkOrderStatu").val() == "20") {
			$("#btnSave").addClass("w3-hide");
			$(".w3-check").attr("disabled", true);
			$("#TespitAciklama").attr("disabled", true);
		}
	});
</script>
<input type="text" class="w3-hide" id="WorkOrderStatu" />
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Direksiyon Pompa Tespit Sonuçları", pagePermission = "EMP_02" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("DireksiyonPompaAdd", "IsEmri", FormMethod.Post))
		{
			@Html.HiddenFor(model => model.DireksiyonPompaFixId)
			@Html.HiddenFor(model => model.IsEmriId)
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwTamirTakimindaAsinma, new { @class = "w3-check" })
					<label>Tamir takımında aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPompaMilindeAsinma, new { @class = "w3-check" })
					<label>Pompa milinde aşınma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBurclardaSarma, new { @class = "w3-check" })
					<label>Burçlarda sarma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwTamirTakimindaKirilma, new { @class = "w3-check" })
					<label>Tamir takımında kırılma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwAltKapaktaHasar, new { @class = "w3-check" })
					<label>Alt kapakta hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwUstKapaktaHasar, new { @class = "w3-check" })
					<label>Üst kapakta hasar</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKasadaCatlak, new { @class = "w3-check" })
					<label>Kasada çatlak</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPompaKecesindeHasar, new { @class = "w3-check" })
					<label>Pompa keçesinde hasar</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPompaOringindeHasar, new { @class = "w3-check" })
					<label>Pompa oringinde hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwYagBasincSupabindaAriza, new { @class = "w3-check" })
					<label>Yağ basınç supabında arıza</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwMilSegmanindaAriza, new { @class = "w3-check" })
					<label>Mil segmanında arıza</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRulmandaBozulma, new { @class = "w3-check" })
					<label>Rulmanda bozulma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class=" w3-padding">
					<label>Tespitler</label>
					@Html.TextAreaFor(model => model.TespitAciklama, new { @class = "w3-input w3-border w3-round", rows = "6", cols = "300" })

				</div>
			</div>
			<div class="w3-row w3-margin">
				<div class="w3-quarter">
					<a href="/IsEmri/IsEmriDuzenle?IsEmriId=@Model.IsEmriId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">
					<button class="w3-btn w3-ripple w3-green" id="btnSave">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>
