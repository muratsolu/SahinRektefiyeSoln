@model SahinRektefiyeSoln.Models.TurboSarjFixing

@{
	ViewBag.Title = "Turbosarj Tespit Sonuçları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
<script>
	$(document).ready(function () {
		$("#WorkOrderStatu").val('@ViewBag.WorkOrderStatu');
		if ($("#WorkOrderStatu").val() == "20") {
			$("#btnSave").addClass("w3-hide");
			$(".w3-check").attr("disabled", true);
			$("#TespitAciklama").attr("disabled", true);
		}
	});
</script>
<input type="text" class="w3-hide" id="WorkOrderStatu" />
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Turbosarj Tespit Sonuçları", pagePermission = "EMP_02" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("TurbosarjFixingAdd", "IsEmri", FormMethod.Post))
		{
			@Html.AntiForgeryToken()
			@Html.HiddenFor(model => model.TurbosarjFixId)
			@Html.HiddenFor(model => model.IsEmriId)
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwTamirTakimindaAsinma, new { @class = "w3-check" })
					<label>Tamir takımında aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwWastegateHasar, new { @class = "w3-check" })
					<label>Wastegate hasar</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwYahKapagindaAsinma, new { @class = "w3-check" })
					<label>Yağ kapağında aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwEgzosSalyangozundaHasar, new { @class = "w3-check" })
					<label>Egzoz salyangozunda hasar </label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKomprosorPervanesindeHasar, new { @class = "w3-check" })
					<label>Kompresör pervanesinde hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKomprasorSalyangozundaHasar, new { @class = "w3-check" })
					<label>Kompresör salyangozunda hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwTurbinMilindeHasar, new { @class = "w3-check" })
					<label>Türbin milinde hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKompleTurboHasar, new { @class = "w3-check" })
					<label>Komple turbo hasarı</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwVNTMekanizmasindaHasar, new { @class = "w3-check" })
					<label>VNT mekanizmasında hasar </label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwVNTMekanizmasindaAsiriKurum, new { @class = "w3-check" })
					<label>VNT mekanizmasında aşırı kurum </label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwMerkezGovdeHasar, new { @class = "w3-check" })
					<label>Merkez gövde de hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwCartridgeKompleHasar, new { @class = "w3-check" })
					<label>Cartridge komple hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class=" w3-padding">
					<label>Tespitler</label>
					@Html.TextAreaFor(model => model.TespitAciklama, new { @class = "w3-input w3-border w3-round", cols = "300", rows = "10", style = "resize:none" })  @**@

				</div>
			</div>
			<div class="w3-row w3-margin">
				<div class="w3-quarter">
					<a href="/IsEmri/IsEmriDuzenle?IsEmriId=@Model.IsEmriId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">
					<button class="w3-btn w3-ripple w3-green" id="btnSave">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>
