@model SahinRektefiyeSoln.Models.DireksiyonHidrolikFixing

@{
	ViewBag.Title = "Direksiyon Kutusu Hidrolik Tespit Sonuçları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
	$(document).ready(function () {
		$("#WorkOrderStatu").val('@ViewBag.WorkOrderStatu');
		if ($("#WorkOrderStatu").val() == "20") {
			$("#btnSave").addClass("w3-hide");
			$(".w3-check").attr("disabled", true);
			$("#TespitAciklama").attr("disabled", true);
		}
	});
</script>
<input type="text" class="w3-hide" id="WorkOrderStatu" />
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Direksiyon Kutusu Hidrolik Tespit Sonuçları", pagePermission = "EMP_02" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("DireksiyonHidrolikAdd", "IsEmri", FormMethod.Post))
		{
			@Html.HiddenFor(model => model.DireksiyonHidrolikFixId)
			@Html.HiddenFor(model => model.IsEmriId)
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwAnaMildeAsinma, new { @class = "w3-check" })
					<label>Ana milde aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwSektorMilindeAsinma, new { @class = "w3-check" })
					<label>Sektör milinde aşınma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKovandaHasar, new { @class = "w3-check" })
					<label>Kovanda hasarlanma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBaglantiAyagindaHasar, new { @class = "w3-check" })
					<label>Bağlantı ayağında hasar</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwMotorBilyalarindaHasar, new { @class = "w3-check" })
					<label>Motor Bilyalarında hasarlanma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwMafsalBilyalarindaHasar, new { @class = "w3-check" })
					<label>Mafsal bilyalarında hasarlanma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwAsiklardaHasar, new { @class = "w3-check" })
					<label>Aşıklarda hasar</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwMasuraBilya, new { @class = "w3-check" })
					<label>Masura bilya</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwMildeEgrilik, new { @class = "w3-check" })
					<label>Milde eğrilik</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBaglantiBurclarindaHasar, new { @class = "w3-check" })
					<label>Bağlantı burçlarında hasarlanma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKecelerdePatlak, new { @class = "w3-check" })
					<label>Keçelerde patlak</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPistondaKopma, new { @class = "w3-check" })
					<label>Pistonda kopma</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBeyinPistonlarindaAsinma, new { @class = "w3-check" })
					<label>Beyin pistonlarında aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwYagDagiticiBeyindeHasar, new { @class = "w3-check" })
					<label>Yağ dağıtıcı beyinde hasar</label>

				</div>

			</div>




			<div class="w3-row">
				<div class=" w3-padding">
					<label>Tespitler</label>
					@Html.TextAreaFor(model => model.TespitAciklama, new { @class = "w3-input w3-border w3-round", rows = "6", cols = "300" })

				</div>
			</div>
			<div class="w3-row w3-margin">
				<div class="w3-quarter">
					<a href="/IsEmri/IsEmriDuzenle?IsEmriId=@Model.IsEmriId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">
					<button class="w3-btn w3-ripple w3-green" id="btnSave">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>

