@model SahinRektefiyeSoln.Models.AlternatorFixing

@{
	ViewBag.Title = "Alternatör Tespit Sonuçları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
	$(document).ready(function () {
		$("#WorkOrderStatu").val('@ViewBag.WorkOrderStatu');
		if ($("#WorkOrderStatu").val() == "20") {
			$("#btnSave").addClass("w3-hide");
			$(".w3-check").attr("disabled", true);
			$("#TespitAciklama").attr("disabled", true);
		}
	});
</script>
<input type="text" class="w3-hide" id="WorkOrderStatu" />
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Alternatör Tespit Sonuçları", pagePermission = "EMP_02" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("AlternatorFixingAdd", "IsEmri", FormMethod.Post))
		{
			@Html.HiddenFor(model => model.AltFixId, new { value = ViewBag.WorkOrderId })
			@Html.HiddenFor(model => model.IsEmriId)
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKomurAsinma, new { @class = "w3-check" })
					<label>Kömürlerde aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKonjektorAriza, new { @class = "w3-check" })
					<label>Konjektör arızalı</label>

				</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwStatorAriza, new { @class = "w3-check" })
					<label>Statör arızalı</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwDiyotTablasiHasar, new { @class = "w3-check" })
					<label>Diyot tablası hasarı </label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRotorAriza, new { @class = "w3-check" })
					<label>Rotor arızalı </label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKasnakAriza, new { @class = "w3-check" })
					<label>Kasnak hasarı</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRulmanHasar, new { @class = "w3-check" })
					<label>Rulman hasarı</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwOnKapakHasar, new { @class = "w3-check" })
					<label>Ön kapak hasarı</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwArkaKapakHasar, new { @class = "w3-check" })
					<label>Arka kapak hasarı </label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRulmanYatagiHasar, new { @class = "w3-check" })
					<label>Rulman yatağı hasarı</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRotorBakirAsinma, new { @class = "w3-check" })
					<label>Rotor bakırı aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPlastikKapakHasar, new { @class = "w3-check" })
					<label>Plastik kapak hasar</label>

				</div>
			</div>
			<div class="w3-row">
				<div class=" w3-padding">
					<label>Tespitler</label>
					@Html.TextAreaFor(model => model.TespitAciklama, new { @class = "w3-input w3-border w3-round", rows = "6", cols = "300" })

				</div>
			</div>
			<div class="w3-row w3-margin">
				<div class="w3-quarter">
					<a href="/IsEmri/IsEmriDuzenle?IsEmriId=@Model.IsEmriId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">
					<button class="w3-btn w3-ripple w3-green" id="btnSave">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>
