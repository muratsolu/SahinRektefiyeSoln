@model SahinRektefiyeSoln.Models.MarsMotorFixing

@{
	ViewBag.Title = "Marş Motor Tespit Sonuçları";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
	$(document).ready(function () {
		$("#WorkOrderStatu").val('@ViewBag.WorkOrderStatu');
		if ($("#WorkOrderStatu").val() == "20") {
			$("#btnSave").addClass("w3-hide");
			$(".w3-check").attr("disabled", true);
			$("#TespitAciklama").attr("disabled", true);
		}
	});
</script>
<input type="text" class="w3-hide" id="WorkOrderStatu" />

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Marş Motor Tespit Sonuçları", pagePermission = "EMP_02" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("MarsMotorFixingAdd", "WorkOrder", FormMethod.Post))
		{
			@Html.HiddenFor(model => model.MarsMotorFixId, new { value = ViewBag.WorkOrderId })
			@Html.HiddenFor(model => model.WorkOrderId, new { value = ViewBag.WorkOrderId })
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwCatalHasar, new { @class = "w3-check" })
								<label>Çatal hasarı</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwBurcAsinma, new { @class = "w3-check" })
								<label>Burçta aşınma</label>

							</div>

			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKomurAsinma, new { @class = "w3-check" })
								<label>Kömürlerde aşınma</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwOtomatikAriza, new { @class = "w3-check" })
					<label>Otomatik arızası</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKomurYuvasindaAsinma, new { @class = "w3-check" })
								<label>Kömür yuvasında aşınma</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwYardimciOtomatikAriza, new { @class = "w3-check" })
					<label>Yardımcı otomatik arızası</label>

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwDislideAsinma, new { @class = "w3-check" })
								<label>Dişlide aşınma</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwYastikAriza, new { @class = "w3-check" })
								<label>Yastıkta arıza</label>

							</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwDisliKafasindaAsinma, new { @class = "w3-check" })
								<label>Dişli kafasında aşınma</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwKollektorAriza, new { @class = "w3-check" })
								<label>Kollektör arızası</label>

							</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRediktorDisliAsinma, new { @class = "w3-check" })
								<label>Rediktör Dişlisinde aşınma</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwRulmanAsinma, new { @class = "w3-check" })
								<label>Rulmanda aşınma</label>

							</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwDebriyajAsinma, new { @class = "w3-check" })
								<label>Debriyaj arızalı</label>

							</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwArkaKapaktaAsinma, new { @class = "w3-check" })
								<label>Arka kapakta aşınma</label>

							</div>
			</div>
			<div class="w3-row">
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwPinyonKapakAsinma, new { @class = "w3-check" })
					<label>Pinyon Kapağında aşınma</label>

				</div>
				<div class="w3-half w3-padding">
					@Html.CheckBoxFor(model => model.SwOtomatikTamirTakimiAsinma, new { @class = "w3-check" })
								<label>Otomatik tamir takımında aşınma</label>

							</div>
			</div>
			<div class="w3-row">
				<div class=" w3-padding">
					<label>Tespitler</label>
					@Html.TextAreaFor(model => model.TespitAciklama, new { @class = "w3-input w3-border w3-round", rows = "6", cols = "300" })

				</div>
			</div>
			<div class="w3-row w3-margin">
				<div class="w3-quarter">
					<a href="/WorkOrder/Order?id=@Model.WorkOrderId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">
					<button class="w3-btn w3-ripple w3-green" id="btnSave">Kaydet</button>
				</div>
			</div>
		}
	</div>
</div>
