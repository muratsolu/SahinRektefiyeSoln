		});

		$('#ParcaTipiId').change(function () {
			setCookie('IsEmriParcaSecParcaTipiId', $(this).val(), 10);
			$("#btnSubmitStokKartAra").trigger("click");
		});

		btnParcaEkle_click = function (string, el) {
