@model SahinRektefiyeSoln.Models.Users

@{
    ViewBag.Title = "Kullanıcı Porföyü";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Kullanıcı Porföyü", pagePermission = "ADM_00" })

<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        
        <div class="w3-threequarter">
            <table class="w3-table-all w3-margin-top w3-margin-bottom">
                <tr>
                    <th>
                        Kullanıcı Adı
                    </th>
                    <th>
                        Adı
                    </th>
                    <th>
                        Soyadı
                    </th>
                    <th>
                        Telefon
                    </th>
                    <th>Oluşturan Kullanıcı</th>
                    <th>Oluşturma Tarihi</th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SurName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator)
                        </td>

                        <td>
                            <a href="/Admin/User?UserName=@item.UserName" class="w3-btn w3-ripple w3-blue"><i class="fa fa-cop"></i>&nbsp;Düzenle </a>
                        </td>
                        <td>
                            <a href="/Admin/ResetUserPass?UserName=@item.UserName" class="w3-btn w3-ripple w3-yellow"><i class="fa fa-refresh "></i>&nbsp;Şifre Resetle </a>
                        </td>
                        <td> <a href="/Admin/UserPortfolio?UserName=@item.UserName" class="w3-btn w3-ripple w3-teal"><i class="fa fa-refresh "></i>&nbsp;Şifre Resetle </a></td>
                    </tr>


                }

            </table>
        </div>

    </div>
</div>

