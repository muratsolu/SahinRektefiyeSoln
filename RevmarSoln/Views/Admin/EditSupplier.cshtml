@model SahinRektefiyeSoln.Models.Suppliers

@{
	ViewBag.Title = "Tedarikçi Düzenle";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Tedarikçi Düzenle", pagePermission = "ADM_14" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm())
		{
			@Html.HiddenFor(x=>x.SupplierId)
			@Html.AntiForgeryToken()

			<div class="w3-row">
				<div class="w3-third w3-padding">
					<label>Tedarikçi Kodu</label>
					@Html.EditorFor(model => model.SupplierCode, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "50", autocomplete = "off" } })

				</div>
				<div class="w3-third w3-padding">
					<label>Tedarikçi Adı</label>
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "w3-input w3-border w3-round ", maxlength = "256", autocomplete = "off" } })
					@*onlylettersTurkish*@
				</div>
				<div class="w3-third w3-padding">
					<label>Vergi Dairesi</label>
					@Html.EditorFor(model => model.CompanyVd, new { htmlAttributes = new { @class = "w3-input w3-border w3-round ", maxlength = "50", autocomplete = "off" } })
				</div>
			</div>
			<div class="w3-row">
				<div class="w3-third w3-padding">
					<label>Vergi Numarası</label>
					@Html.EditorFor(model => model.CompanyVNo, new { htmlAttributes = new { @class = "w3-input w3-border w3-round number", maxlength = "50", autocomplete = "off" } })

				</div>
				<div class="w3-third w3-padding">
					<label>Telefon Numarasi</label>
					@Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "w3-input w3-border w3-round phone", maxlength = "50", autocomplete = "off" } })

				</div>
			</div>

			<hr>
			<div class="w3-row">
				<div class="w3-padding">
					<label class="w3-text-grey">Adres</label>
					@Html.TextAreaFor(model => model.Address, new { @class = "w3-input w3-border w3-round", maxlength = "512", autocomplete = "off" })
				</div>
			</div>
			<div class="w3-row">
				<div class="w3-quarter w3-left">
					<a href="/Admin/Suppliers" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
				</div>
				<div class="w3-quarter">&nbsp;</div>
				<div class="w3-quarter w3-padding">
				
				</div>
				<div class="w3-quarter  w3-padding">
				
					<button class="w3-btn w3-ripple w3-green w3-right">Kaydet</button>
				</div>
			</div>

		}
	</div>
</div>

