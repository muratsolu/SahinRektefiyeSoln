@model IEnumerable<SahinRektefiyeSoln.Models.UserMenus>

@{
    ViewBag.Title = "Kullanıcı'nın Menüsü";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Kullanıcı'nın Menüsü", pagePermission = "MNGR_01" })
<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        <div class="w3-row w3-margin-left w3-margin-bottom">
            <div class="w3-half w3-margin-top">
                <table class="w3-table-all">
                    <thead>
                        <tr class="w3-light-grey">
                            <th>Kullanıcı</th>
                            <th>Menu Adı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.Menus.Title
                    </td>
                    <td></td>
                </tr>
}
                    </tbody>
                </table>
                <div class="w3-margin-top">
                    <a href="/Admin/UserRoles" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
                </div>
                
            </div>
        </div>
    </div>
</div>