@model SahinRektefiyeSoln.Models.Tasks

@{
	ViewBag.Title = "İş Adı Düzenle";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "İş Emri Adı Düzenle", pagePermission = "ADM_13" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="w3-row">
				<div class="w3-quarter w3-padding">
					<label>İş Adı</label>
					@Html.EditorFor(model => model.TaskName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "256", autocomplete = "off" } })

				</div>
			</div>
			<div class="w3-row">
				<div class="w3-quarter w3-padding">
					<label>İş Emri PreFix</label>
					@Html.EditorFor(model => model.PreFix, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "3", autocomplete = "off" } })

				</div>
			</div>
			<hr />
			<div class="w3-row">
				<div class="w3-quarter">&nbsp</div>
				<div class="w3-quarter">&nbsp</div>
				<div class="w3-quarter w3-padding">

				</div>
				<div class="w3-quarter  w3-padding">
					<button class="w3-btn w3-ripple w3-green w3-right">Kaydet</button>
					@*<input type="submit" value="Create" class="btn btn-default" />*@
				</div>
			</div>
		}
	</div>
</div>


