@model SahinRektefiyeSoln.Models.Menus

@{
    ViewBag.Title = "Menü Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Menu Tanımlama", pagePermission = "ADM_05" })

<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        @using (Html.BeginForm())
    {
		<div class="w3-row">
			<div class="w3-quarter w3-padding">
				<label>Title</label>
				@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>Url</label>
				@Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>Menu Grup</label>
				@Html.EditorFor(model => model.MenuRank, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" } })
			</div>
		</div>

		<div class="w3-row">
			<div class="w3-quarter w3-padding">
				<label>Icon</label>
				@Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>PermissionName</label>
				@Html.EditorFor(model => model.PermissionName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>Sıralama</label>
				@Html.EditorFor(model => model.Rank, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" } })
			</div>
		</div>
        <hr>

        <div class="w3-row">
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter w3-padding">


            </div>
            <div class="w3-quarter  w3-padding">
                <button class="w3-btn w3-ripple w3-green w3-right">Menu Ekle</button>
            </div>
        </div>
}
        <iframe class="embed-responsive-item" src="https://fontawesome.com/v4.7.0/icons/" width="1200" height="600" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
    </div>
</div>


        
