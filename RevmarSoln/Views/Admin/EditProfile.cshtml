@model SahinRektefiyeSoln.Models.Users

@{
	ViewBag.Title = "Profil Düzenle";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Profil Düzenle", pagePermission = "ADM_17" })
<div class="w3-panel">
	<script></script>
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm("EditProfile", "Admin", FormMethod.Post))
	{

		<div class="w3-row">
			<div class="w3-quarter w3-padding">
				<label>Kullanıcı Adı</label>
				@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "16", autocomplete = "off" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>Şifre</label>
				@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", type = "password", maxlength = "50" } })
			</div>

		</div>
		<div class="w3-row">
			<div class="w3-quarter w3-padding">
				<label>Adı</label>
				@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round onlylettersTurkish", maxlength = "25", autocomplete = "off" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>Soyad</label>
				@Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round onlylettersTurkish", maxlength = "25", autocomplete = "off" } })
			</div>
			<div class="w3-quarter w3-padding">
				<label>Telefon Numarası</label>
				@Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "w3-input w3-border w3-round phone", autocomplete = "off" } })
			</div>

		</div>
		<hr />
		<div class="w3-row">
			<div class="w3-quarter">&nbsp</div>
			<div class="w3-quarter">&nbsp</div>
			<div class="w3-quarter w3-padding">

			</div>
			<div class="w3-quarter  w3-padding">
				<button class="w3-btn w3-ripple w3-green w3-right">Kaydet</button>
				@*<input type="submit" value="Create" class="btn btn-default" />*@
			</div>
		</div>
}
		
		<div class="w3-quarter w3-left w3-padding w3-border w3-margin-bottom">
			<h5>Profile Resmi Yükle</h5><hr />
			@Html.Action("EditProfileLogo", new { UserName = Model.UserName })
		</div>

	</div>
</div>

