@model IEnumerable<SahinRektefiyeSoln.Models.CompanyServices>

@{
	ViewBag.Title = "Firma Servisleri";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Servisler", pagePermission = "ADM_00" })
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-panel w3-yellow w3-round-large">
			<p>@ViewBag.CompanyName firmasının servislerini görüntülemektesiniz.</p>
		</div>
		<div class="w3-margin-top w3-margin-bottom">
			<table class="w3-table-all w3-hoverable">
				<thead>
					<tr class="w3-light-grey">
						<th>Servis Adı</th>
						<th>Oluşturulduğu Tarih</th>
						<th>Oluşturan Kullanıcı</th>
						<th></th>
					</tr>
				</thead>
				@foreach (var service in Model)
				{
					<tr>
						<td>@service.Services.Name</td>
						<td> @Convert.ToDateTime(service.Services.CreatedDate).ToShortDateString()</td>
						<td>@service.Services.Creator</td>
						<td>
							<a href="/Admin/DeleteCompanyService?CompanyId=@service.CompanyId&ServiceId=@service.ServiceId" class="w3-btn w3-ripple w3-red" onclick="if (!confirm('Silmek istediğinizden emin misiniz?')) return false;"><i class="fa fa-trash"></i>&nbsp;Firmadan Servisi Sil </a>
						</td>
					</tr>
				}
			</table>
		</div>
		<hr />
		<div class="w3-row w3-margin-bottom">
			<div class="w3-quarter w3-left">
				<a href="/Admin/Companies" class="w3-btn w3-ripple w3-blue"><i class="fa fa-arrow-left"></i>&nbsp;Geri </a>
			</div>
		</div>
	</div>
</div>
