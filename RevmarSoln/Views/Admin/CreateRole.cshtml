@model SahinRektefiyeSoln.Models.Roles

@{
    ViewBag.Title = "Rol Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Rol Tanımla", pagePermission = "ADM_01" })
<script>
	$(document).ready(function () {
		if (@ViewBag.Result ==1 || @ViewBag.Result ==null ) {
			$('#RoleName').val('');

		}
	});
</script>
<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <div class="w3-row">
                <div class="w3-third w3-padding">
                    <label>Rol</label>
                    @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round" , maxlength = "25", autocomplete = "off" } })
                   
                </div>
                <div class="w3-third w3-padding">

                </div>
                <div class="w3-third w3-padding">

                </div>
            </div>

            <hr>

            <div class="w3-row">
                <div class="w3-quarter">&nbsp;</div>
                <div class="w3-quarter">&nbsp;</div>
                <div class="w3-quarter w3-padding">


                </div>
                <div class="w3-quarter  w3-padding">
                    <button class="w3-btn w3-ripple w3-green w3-right">Rol Ekle</button>
                </div>
            </div>
        }
    </div>
</div>
