@model IEnumerable<SahinRektefiyeSoln.Models.Roles>

@{
	ViewBag.Title = "Roller";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Roller", pagePermission = "MNG_03" })
<script>
	$(document).ready(function () {
		$('#btnDelete').click(function (e) {
			return window.confirm("Are you sure?");
		});
		
	});
	
</script>
<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		<div class="w3-row w3-margin-top">
			<a href="/Admin/CreateRole" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp;Rol Ekle </a>
		</div>
		<div class="w3-threequarter">
			<table class="w3-table-all w3-margin-top w3-margin-bottom">
				<tr>
					@*<th>
						Role ID
					</th>*@
					<th>
						Role Adı
					</th>

					<th>Oluşturan Kullanıcı</th>
					<th>Oluşturma Tarihi</th>
					<th></th>
				</tr>

				@foreach (var item in Model)
				{
					if (item.RoleName != "ADMIN")
					{
						<tr>
							@*<td>
								@Html.DisplayFor(modelItem => item.RoleId)
							</td>*@
							<td>
								@Html.DisplayFor(modelItem => item.RoleName)
							</td>
							<td>@Html.DisplayFor(modelItem => item.Creator)</td>
							<td> @Convert.ToDateTime(item.CreatedDate).ToShortDateString()</td>
							<td>
								<a href="/Admin/Role?RoleId=@item.RoleId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-cop"></i>&nbsp;Düzenle </a>
								<a href="/Admin/DeleteRole?RoleId=@item.RoleId" class="w3-btn w3-ripple w3-red" onclick="if (!confirm('Silmek istediğinizden emin misiniz?')) return false;"><i class="fa fa-cop"></i>&nbsp;Sil </a>
								@*<a href="/Admin/RolePerm?RoleId=@item.RoleId" class="w3-btn w3-ripple w3-teal">Role Yetki ver</a>*@
							</td>

						</tr>
					}



				}

			</table>
		</div>

	</div>
</div>

