@model SahinRektefiyeSoln.Models.Vehicles

@{
    ViewBag.Title = "Araç Tanımla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Firmaya Model Tanımlama", pagePermission = "ADM_10" })

<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
       
            <div class="w3-row">
            <div class="w3-third w3-padding">
                <label>Firma Adı</label>
                @Html.DropDownList("CompanyId", (SelectList)ViewBag.Companies, htmlAttributes: new { @class = "w3-select w3-border w3-round", @Id = "CompanyId" })
            </div>
            <div class="w3-third w3-padding">
                <label>Model Adı</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "w3-select w3-border w3-round", maxlength = "126", autocomplete = "off" } })
            </div>
            <div class="w3-third w3-padding">

            </div>
        </div>

        <hr>

        <div class="w3-row">
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter w3-padding">


            </div>
            <div class="w3-quarter  w3-padding">
                <button class="w3-btn w3-ripple w3-green w3-right">Firma'ya Model Ekle</button>
            </div>
        </div>
       
    }
    </div>
</div>
       

