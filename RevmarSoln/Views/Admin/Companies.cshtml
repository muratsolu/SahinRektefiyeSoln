@model IEnumerable<SahinRektefiyeSoln.Models.Companies>

@{
    ViewBag.Title = "Firmalar";
}
@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Firmalar", pagePermission = "ADM_00" })
<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        <div class="w3-row w3-row-padding w3-margin-top">
            <a href="/Admin/CreateCompany" class="w3-btn w3-ripple w3-green"><i class="fa fa-industry fa-fw"></i>&nbsp;Firma Ekle </a>
        </div>
        <table class="w3-table-all w3-hoverable w3-margin-top w3-margin-bottom">
            <thead>
				<tr class="w3-light-grey">
					<th>Firma Adı</th>
					@*<th>Kontak Kişi</th>
					<th>Telefon Numarası</th>
					<th>Adres</th>*@
					<th>Oluşturulan Tarih</th>
					<th>Oluşturan Kullanıcı</th>
					<th></th>
					<th></th>
				</tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.ContactName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>*@
                    <td>
                        @Convert.ToDateTime(item.CreatedDate).ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creator)
                    </td>
					<td>
						<a href="/Admin/EditCompany?CompanyId=@item.CompanyId" class="w3-btn w3-ripple w3-blue"><i class="fa fa-cop"></i>&nbsp;Düzenle </a>
						
						</td>
					<td>
						<a href="/Admin/DeleteCompany?CompanyId=@item.CompanyId" class="w3-btn w3-ripple w3-red" onclick="if (!confirm('Silmek istediğinizden emin misiniz?')) return false;"><i class="fa fa-trash"></i>&nbsp; Sil </a>
					</td>
                </tr>            
            }
        </table>
    </div>
</div>

