@model SahinRektefiyeSoln.Models.Permissions

@{
    ViewBag.Title = "Yetki Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Yetki Tanımla", pagePermission = "ADM_02" })
<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="w3-row">
            <div class="w3-third w3-padding">
                <label>Yetki Kodu</label>
                @Html.EditorFor(model => model.PermissionName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "25", autocomplete = "off" } })
            </div>
            <div class="w3-third w3-padding">
                <label>Yetki Açıklaması</label>
                @Html.EditorFor(model => model.PermissionDesc, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "150", autocomplete = "off" } })

            </div>
            <div class="w3-third w3-padding">

            </div>
        </div>

        <hr>

        <div class="w3-row">
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter w3-padding">


            </div>
            <div class="w3-quarter  w3-padding">
                <button class="w3-btn w3-ripple w3-green w3-right">Yetki Ekle</button>
            </div>
        </div>

}
    </div>
</div>
