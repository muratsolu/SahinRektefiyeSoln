@model SahinRektefiyeSoln.Models.Companies

@{
	ViewBag.Title = "Firma Düzenle";
	Layout = "~/Views/Shared/_Layout.cshtml";
}




@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Firma Düzenle", pagePermission = "ADM_08" })

<div class="w3-panel">
	<div class="w3-row-padding w3-card">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="w3-row">
				<div class="w3-third w3-padding">
					<label>Firma</label>
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "w3-input w3-border w3-round", maxlength = "256", autocomplete = "off" } })
				</div>
				<div class="w3-third w3-padding">
					<label>İlgili Kisi</label>
					@Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "w3-input w3-border w3-round onlylettersTurkish", maxlength = "50", autocomplete = "off" } })
				</div>
				<div class="w3-third w3-padding">
					<label>Telefon Numarasi</label>
					@Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "w3-input w3-border w3-round phone", autocomplete = "off" } })
				</div>
			</div>

			<hr>
			<div class="w3-row">
				<div class="w3-padding">
					<label class="w3-text-grey">Adres</label>
					@Html.TextAreaFor(model => model.Address, new { @class = "w3-input w3-border w3-round" })
				</div>
			</div>
			<div class="w3-row">
				<div class="w3-quarter">&nbsp;</div>
				<div class="w3-quarter">&nbsp;</div>
				<div class="w3-quarter w3-padding">

				</div>
				<div class="w3-quarter  w3-padding">
					<button class="w3-btn w3-ripple w3-green w3-right"> Kaydet</button>
				</div>
			</div>

		}
	</div>
</div>







