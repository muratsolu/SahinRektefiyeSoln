@model SahinRektefiyeSoln.Models.UserRoles

@{
    ViewBag.Title = "Kullanıcı Rol Tanımla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("SetPageHeader", "Admin", new { pageTitle = "Kullanıcı Rol Tanımla", pagePermission = "ADM_04" })

<div class="w3-panel">
    <div class="w3-row-padding w3-card">
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="w3-row">
            <div class="w3-third w3-padding">
                <label>Kullanıcı</label>
                @Html.DropDownList("UserName", (SelectList)ViewBag.Users, htmlAttributes: new { @class = "w3-select w3-border w3-round", @Id = "UserName" })
               
            </div>
            <div class="w3-third w3-padding">
                <label>Role</label>
                @Html.DropDownList("RoleId", (SelectList)ViewBag.Roles, "Rol Seçiniz", htmlAttributes: new { @class = "w3-select w3-border w3-round", @Id = "RoleId" })
            </div>
            <div class="w3-third w3-padding">

            </div>
        </div>

        <hr>

        <div class="w3-row">
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter">&nbsp;</div>
            <div class="w3-quarter w3-padding">


            </div>
            <div class="w3-quarter  w3-padding">
                <button class="w3-btn w3-ripple w3-green w3-right">Kullanıcı Rol Ekle</button>
            </div>
        </div>
}
    </div>
</div>

